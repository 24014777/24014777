include <stdio.h>

int main() {
    float receita, despesa, saldo;

    // Entrada dos valores
    printf("Digite o valor da receita: ");
    scanf("%f", &receita);

    printf("Digite o valor da despesa: ");
    scanf("%f", &despesa);


    // Cálculo do saldo
    saldo = receita - despesa;

    // Exibindo o saldo atualizado
    printf("Seu saldo atualizado é: R$ %.2f\n", saldo);

    return 0;
}

git add main.c

git commit -m "Implementação inicial do cálculo de saldo”

git push origin main
