#include <stdio.h> //Declaração de biblioteca
int main() {
    int n1, n2, n3, resultado; //Variaveis utilizadas 
    double resultado2;
    printf("Digite número um: "); //Usuario digita o numero um
    scanf("%d", &n1); //Valor armazenado de n1
    printf("Digite número dois: "); //Usuario digita o numero dois
    scanf("%d", &n2); //Valor armazenado de n2
    printf("Digite numero três: "); //Usuario digita o numero três
    scanf("%d", &n3); //Valor armazenado de n3
resultado=n1+n2+n3;//Calculo da soma do n1,n2 e n3
printf("%d+%d+%d=%d\n", n1, n2, n3, resultado);//Apresentação do resultado
resultado2=resultado/2.0;//Divisão do valor resultado por 2 
 
if (resultado2-0.5==(int)resultado2){//Se o resultado dividido por 2 der decimal
        printf("A soma dos seus tres numeros é IMPAR.\n");
    } else { //Se o resultado dividido por 2 não der decimal
        printf("A soma dos seus tres numeros é PAR.\n");
}
    return 0;
}
